<Window x:Class="FileManager2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager2"
        mc:Ignorable="d"
        Title="MainWindow" Height="440" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Label HorizontalAlignment="Center">IP:</Label>
            <TextBox x:Name="FormIp" Margin="5" HorizontalContentAlignment="Center" Text="127.0.0.1"/>
            <Label HorizontalAlignment="Center">PORT:</Label>
            <TextBox x:Name="FormPort" Margin="5" HorizontalContentAlignment="Center" Text="8888"/>
            <Button Click="FormClickButtonConnection" Margin="5">Connect</Button>
            <Button Click="FormClickButtonDisconnection" Margin="5">Disconnect</Button>
        </StackPanel>
        <Rectangle x:Name="FormIndicator" Grid.Row="1" Margin="8,3,8,3" Fill="Red"></Rectangle>
        <WrapPanel Grid.Column="1" Grid.Row="1">
            <Button Click="FormClickButtonBrowse" Width="100" Margin="3">Browse</Button>
            <Button Width="100" Margin="3">Download</Button>
            <Button Click="FormClickButtonUpload" Width="100" Margin="3">Upload</Button>
            <Button Width="100" Margin="3">Play</Button>
        </WrapPanel>
        <Label x:Name="FormLableLenghtFile" Grid.Column="1" Content="Label" HorizontalAlignment="Left" Margin="110,99,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
